<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Jogo de Perguntas</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 40px;
      background-color: #f4f4f4;
    }
    .container {
      background: white;
      padding: 30px;
      max-width: 600px;
      margin: auto;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .question {
      font-size: 20px;
      margin-bottom: 20px;
    }
    .options button {
      display: block;
      width: 100%;
      margin: 10px 0;
      padding: 10px;
      font-size: 16px;
      cursor: pointer;
    }
    #result {
      font-size: 18px;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Jogo de Perguntas</h1>
    <div id="quiz">
      <div class="question" id="question">Carregando...</div>
      <div class="options" id="options"></div>
      <div id="result"></div>
    </div>
  </div>

  <script>
    const questions = [
      {
        question: "Qual é a capital do Brasil?",
        options: ["São Paulo", "Brasília", "Rio de Janeiro", "Salvador"],
        answer: "Brasília"
      },
      {
        question: "Quanto é 5 x 3?",
        options: ["15", "10", "20", "8"],
        answer: "15"
      },
      {
        question: "Qual o maior planeta do sistema solar?",
        options: ["Terra", "Marte", "Júpiter", "Saturno"],
        answer: "Júpiter"
      },
      {
        question: "Quem pintou a Mona Lisa?",
        options: ["Van Gogh", "Michelangelo", "Leonardo da Vinci", "Picasso"],
        answer: "Leonardo da Vinci"
      },
      {
        question: "Qual é o elemento químico representado por 'O'?",
        options: ["Ouro", "Osmium", "Oxigênio", "Ozônio"],
        answer: "Oxigênio"
      },
      {
        question: "Em que continente está o Egito?",
        options: ["Ásia", "Europa", "América", "África"],
        answer: "África"
      },
      {
        question: "Qual é o animal símbolo da WWF?",
        options: ["Urso", "Panda", "Leão", "Elefante"],
        answer: "Panda"
      },
      {
        question: "Quem escreveu 'Dom Casmurro'?",
        options: ["Machado de Assis", "José de Alencar", "Carlos Drummond", "Clarice Lispector"],
        answer: "Machado de Assis"
      },
      {
        question: "Qual país é famoso pelo sushi?",
        options: ["China", "Tailândia", "Japão", "Coreia do Sul"],
        answer: "Japão"
      },
      {
        question: "Qual é o número π (pi) arredondado para duas casas decimais?",
        options: ["3.12", "3.14", "3.16", "3.18"],
        answer: "3.14"
      }
    ];

    let currentQuestion = 0;
    let score = 0;

    function loadQuestion() {
      const q = questions[currentQuestion];
      document.getElementById("question").innerText = q.question;
      const optionsDiv = document.getElementById("options");
      optionsDiv.innerHTML = "";

      q.options.forEach(option => {
        const btn = document.createElement("button");
        btn.innerText = option;
        btn.onclick = () => checkAnswer(option);
        optionsDiv.appendChild(btn);
      });
    }

    function checkAnswer(selected) {
      const result = document.getElementById("result");
      if (selected === questions[currentQuestion].answer) {
        score++;
        result.innerText = "✅ Resposta correta!";
      } else {
        result.innerText = "❌ Errado. Resposta certa: " + questions[currentQuestion].answer;
      }

      currentQuestion++;
      if (currentQuestion < questions.length) {
        setTimeout(() => {
          result.innerText = "";
          loadQuestion();
        }, 1500);
      } else {
        setTimeout(() => {
          document.getElementById("quiz").innerHTML =
            `<h2>Você acertou ${score} de ${questions.length} perguntas!</h2>`;
        }, 1500);
      }
    }

    loadQuestion();
  </script>

</body>
</html>
